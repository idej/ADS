<%- model_class = Advertisement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:create_date) %></th>
      <th><%= model_class.human_attribute_name(:publicate_date) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:life_cycle) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= link_to advertisement.id, advertisement_path(advertisement) %></td>
        <td><%= advertisement.content %></td>
        <td><%= advertisement.create_date %></td>
        <td><%= advertisement.publicate_date %></td>
        <td><%= advertisement.phone_number %></td>
        <td><%= advertisement.life_cycle %></td>
        <td><%=l advertisement.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_advertisement_path(advertisement), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      advertisement_path(advertisement),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Advertisement %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_advertisement_path,
              :class => 'btn btn-primary' %>
<% end %>
