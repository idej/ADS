<% if can? :read, Advertisement %>
  <%- model_class = Advertisement -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:type) %></th>
        <th><%= model_class.human_attribute_name(:content) %></th>
        <th><%= model_class.human_attribute_name(:phone_number) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @advertisements.each do |advertisement| %>
        <tr>
          <td><%= link_to advertisement.id, advertisement_path(advertisement) %></td>
          <td><%= advertisement_type(advertisement.type_id) %></td>
          <td><%= advertisement.content %></td>
          <td><%= advertisement.phone_number %></td>
          <td>
            <% if can? :update, advertisement  %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_advertisement_path(advertisement), :class => 'btn btn-mini' %>
            <% end %>
            <% if can? :destroy, advertisement %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        advertisement_path(advertisement),
                        :method => :delete,
                        :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                        :class => 'btn btn-mini btn-danger' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if can? :create, Advertisement %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_advertisement_path,
              :class => 'btn btn-primary' %>
<% end %>
