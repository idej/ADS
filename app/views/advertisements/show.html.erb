<%- model_class = Advertisement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @advertisement.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:create_date) %>:</strong></dt>
  <dd><%= @advertisement.create_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publicate_date) %>:</strong></dt>
  <dd><%= @advertisement.publicate_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @advertisement.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:life_cycle) %>:</strong></dt>
  <dd><%= @advertisement.life_cycle %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              advertisements_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_advertisement_path(@advertisement), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              advertisement_path(@advertisement),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
