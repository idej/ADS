<% if user_signed_in? -%>
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">Menu</li>
      <% if can? :read, Advertisement %>
        <li><%= link_to "Advertisements", advertisements_path %></li>
      <% end %>
      <% if can? :manage, Type %>
          <li><%= link_to 'Types', types_path %></li>
      <% end %>
      <% if can? :manage, User %>
          <li><%= link_to 'Profile', edit_user_path(current_user) %></li>
          <li><%= link_to 'Users', users_path %></li>
      <% else %>
          <li><%= link_to 'Profile', users_path %></li>
      <% end %>
      <% if can? :create, Advertisement %>
        <li><%= link_to "New Ads", new_advertisement_path %></li>
      <% end %>
    </ul>
  </div><!--/.well -->
<% end %>